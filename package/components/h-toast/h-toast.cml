<template>
  <h-popup-manager show="{{show}}" mask="{{mask}}">
    <view class="h-toast-content h-toast-content--{{iconMap[type] ? 'square' : 'other'}}">
      <view
        c-if="{{type==='loading'}}"
        class="h-toast-icon h-toast-icon--loading"
        style="width:80cpx;height:80cpx"
      ></view>
      <h-icon
        c-else-if="{{type==='success'||type==='warn'}}"
        name="{{iconMap[type]}}"
        class="h-toast-icon h-toast-icon--{{type}}"
      ></h-icon>
      <view class="h-toast-text">{{message}}</view>
    </view>
  </h-popup-manager>
</template>
<script>
import componentMixin from '../../core/mixins/component/index.js'
export default {
  componentName: 'h-toast',
  mixins: [...componentMixin],
  data: {
    type: "loading",
    message: "",
    duration: 3000,
    show: false,
    mask: false,
    iconMap: {
      loading: 'el-icon-hp-jiazai1',
      warn: 'el-icon-hp-shibai',
      success: 'el-icon-hp-chenggong'
    }
  },
  mounted () {
    this._on('toggle', (options = {}) => {
      Object.keys(options).forEach(key => {
        this[key] = options[key]
      })
    })
  }
}
</script>

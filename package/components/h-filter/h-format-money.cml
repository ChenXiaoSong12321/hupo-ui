
<template>
  <text>{{formatMoney}}</text>
</template>

<script>
import componentMixin from '../../core/mixins/component/index.js'

class HFormatMoney {
  name = 'h-format-money'
  mixins = [...componentMixin]
  props = {
    money: {
      type: [String,Number],
      default: ""
    }
  }
  computed = {
    formatMoney() {
      let money = this.money;
      if (!money) return "0";
      let f = parseFloat(money);
      if (isNaN(f)) {
        return "0";
      }
      f = Math.round(money) / 100;
      const s = parseFloat(f);
      return s;
    }
  }
}
export default new HFormatMoney()
</script>

.hupo-popup {
  top: 50%;
  left: 50%;
  z-index: 80;
  max-height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  background-color: none;
  -webkit-overflow-scrolling: touch;
  -webkit-transform: translate3d(-50%,-50%,0);
  transform: translate3d(-50%,-50%,0)
}

.hupo-popup,.hupo-popup__overlay {
  display: none;
  position: fixed;
  -webkit-animation: hupo-fade-in .3s ease;
  animation: hupo-fade-in .3s ease
}

.hupo-popup__overlay {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 79;
  background-color: rgba(0,0,0,.7)
}

.hupo-popup--top {
  width: 100%;
  top: 0;
  right: auto;
  bottom: auto;
  left: 50%;
  -webkit-transform: translate3d(-50%,0,0);
  transform: translate3d(-50%,0,0);
  -webkit-animation-name: hupo-popup-top;
  animation-name: hupo-popup-top
}

.hupo-popup--right {
  top: 50%;
  right: 0;
  bottom: auto;
  left: auto;
  -webkit-transform: translate3d(0,-50%,0);
  transform: translate3d(0,-50%,0);
  -webkit-animation-name: hupo-popup-right;
  animation-name: hupo-popup-right
}

.hupo-popup--bottom {
  width: 100%;
  top: auto;
  bottom: 0;
  right: auto;
  left: 50%;
  -webkit-transform: translate3d(-50%,0,0);
  transform: translate3d(-50%,0,0);
  -webkit-animation-name: hupo-popup-bottom;
  animation-name: hupo-popup-bottom
}

.hupo-popup--left {
  top: 50%;
  right: auto;
  bottom: auto;
  left: 0;
  -webkit-transform: translate3d(0,-50%,0);
  transform: translate3d(0,-50%,0);
  -webkit-animation-name: hupo-popup-left;
  animation-name: hupo-popup-left
}

.hupo-popup--show {
  display: block
}

@-webkit-keyframes hupo-popup-top {
  from {
    -webkit-transform: translate3d(-50%,-100%,0);
    transform: translate3d(-50%,-100%,0)
  }
}

@keyframes hupo-popup-top {
  from {
    -webkit-transform: translate3d(-50%,-100%,0);
    transform: translate3d(-50%,-100%,0)
  }
}

@-webkit-keyframes hupo-popup-bottom {
  from {
    -webkit-transform: translate3d(-50%,100%,0);
    transform: translate3d(-50%,100%,0)
  }
}

@keyframes hupo-popup-bottom {
  from {
    -webkit-transform: translate3d(-50%,100%,0);
    transform: translate3d(-50%,100%,0)
  }
}

@-webkit-keyframes hupo-popup-left {
  from {
    -webkit-transform: translate3d(-100%,-50%,0);
    transform: translate3d(-100%,-50%,0)
  }
}

@keyframes hupo-popup-left {
  from {
    -webkit-transform: translate3d(-100%,-50%,0);
    transform: translate3d(-100%,-50%,0)
  }
}

@-webkit-keyframes hupo-popup-right {
  from {
    -webkit-transform: translate3d(100%,-50%,0);
    transform: translate3d(100%,-50%,0)
  }
}

@keyframes hupo-popup-right {
  from {
    -webkit-transform: translate3d(100%,-50%,0);
    transform: translate3d(100%,-50%,0)
  }
}

@-webkit-keyframes hupo-fade-in {
  from {
    opacity: 0
  }

  to {
    opacity: 1
  }
}

@keyframes hupo-fade-in {
  from {
    opacity: 0
  }

  to {
    opacity: 1
  }
}

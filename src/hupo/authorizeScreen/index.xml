<block wx:if="{{show}}">
  <hp-navbar-fixed z-index="1000" wx:if="{{authorize.isAuth || !authorize.lastMobileBindTime || (focus && !user.mobile)}}">
    <view class="hupo-getuserinfo">
      <image class="hupo-getuserinfo-logo" src="/images/hupo-logo.png"></image>
      <view class="hupo-getuserinfo-name">琥珀亲子</view>
      <view class="hupo-getuserinfo-tip">请完成微信授权以继续使用</view>
      <hupo-button custom-style="width:660rpx;height:88rpx;border-radius:10rpx;" open-type="{{authorize.isAuth ? 'getUserInfo' : 'getPhoneNumber'}}" bind:getuserinfo="handleGetuserinfo" bind:getphonenumber="handleGetphonenumber" bgColor="#67AE42" size="max">
        {{authorize.isAuth ? '微信授权用户信息' : '微信手机号快捷登录'}}
      </hupo-button>
    </view>
  </hp-navbar-fixed>
</block>

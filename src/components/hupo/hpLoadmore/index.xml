<block wx:if="{{loadmore.nomore}}">
  <view class="humall-loadmore-fix-bug">
    <view class="humall-loadmore humall-loadmore--nomore">
      <view class="humall-loadmore__tips">
        <view class="humall-loadmore__dot"></view>
      </view>
    </view>
  </view>
</block>

<block wx:elif="{{loadmore.loading}}">
  <view class="humall-loadmore-fix-bug">
    <view class="humall-loadmore">
      <view class="humall-loading"></view>
      <view class="humall-loadmore__tips">加载中...</view>
    </view>
  </view>
</block>

<block wx:elif="{{loadmore.nodata && (length >= 20 || isSlogen)}}">
  <view class="humall-loadmore-fix-bug">
    <view class="humall-loadmore humall-loadmore--nodata">
      <block wx:if="{{isSlotSlogen}}">
        <slot></slot>
      </block>
      <block wx:else>
        <image src="/images/nodata.png" mode="widthFix"></image>
      </block>
      <!-- <view class="humall-loadmore__tips">{{ nodata_str || '暂无数据' }}</view> -->
      <!-- <view class="humall-loadmore__tips"><image src="/images/nodata.png" mode="widthFix"></image></view> -->
    </view>
  </view>
</block>
